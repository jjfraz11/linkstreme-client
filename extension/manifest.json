{
  "manifest_version": 2,
  "name": "Linkstreme Client (Chrome)",
  "version": "0.0.1",
  "author": "Jonathan Frazier",

  "description": "Discover. Collect. Share.",
  // "icons": { },
  "browser_action": {
    "default_popup": "app/popup.html"
  },

  "permissions": [
    "sessions", // Needed to access info on closed tabs
    "storage",  // Enable Chrome Storage
    "tabs",     // Needed to access info on current tabs
    "unlimitedStorage", // Needed to allow unlimited persistence for storage

    "http://*/",
    "https://*/"
  ]
}
